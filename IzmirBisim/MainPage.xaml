        <Grid Grid.Row="0" Background="#4687A2">
            <TextBlock Text="İzmir Bisim" Foreground="White" FontFamily="Calibri" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
        </Grid>

    </Grid>

